.header{
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-orient: horizontal;
	-webkit-box-direction: normal;
	-webkit-flex-flow: row;
	        flex-flow: row;
	-webkit-box-pack: center;
	-webkit-justify-content: center;
	        justify-content: center;
	padding-top: 40rpx;
}
.header view{
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-orient: vertical;
	-webkit-box-direction: normal;
	-webkit-flex-flow: column;
	        flex-flow: column;
	-webkit-box-pack: center;
	-webkit-justify-content: center;
	        justify-content: center;
	text-align: center;
}
.header image{
	border-radius:50%;
	border:5rpx solid #A2DEFA;
	margin-left: 30rpx;
	margin-right: 30rpx;
}
.doctor > image{
	height: 160rpx;
	width: 160rpx;
}
.nurse > image{
	margin-top: 40rpx;
	height: 120rpx;
	width: 120rpx;
}
.post{
	color: #B4B4B4;
	font-size: 10px;
	padding-top: 30rpx;
}
.dname{
	color: #848484;
	font-size: 14px;
}
.name{
	/* color: #848484; */
	color: #828282;
	font-size: 12px;
	font-weight: bold;
}
.content{
	margin-top: 50rpx;
	padding-left: 30rpx;
	padding-right: 30rpx;
	font-size:14px ;
}
.title{
	font-size: 14px;
	color:#79D0F3;
	letter-spacing:2rpx;
}
.title-img{
	width: 30rpx;
	height: 30rpx;
	margin-right: 10rpx;
}
.doctor-introduce{
	margin-top: 30rpx;
}
.introduce{
	font-size: 13px;
	color:#878787;
}
.service{
	margin-top: 30rpx;
	margin-bottom: 20rpx;
}
.service-dispaly{
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-orient: horizontal;
	-webkit-box-direction: normal;
	-webkit-flex-flow: row;
	        flex-flow: row;
	-webkit-box-pack: center;
	-webkit-justify-content: center;
	        justify-content: center;
	-webkit-box-align: center;
	-webkit-align-items: center;
	        align-items: center;
	margin-top: 15rpx;
}
.service-dispaly-bottom{
	padding-bottom: 30rpx;
}
.service-btn{
	border:3rpx solid #A2DEFA;
	border-radius:10rpx;
	height: 100rpx;
	width: 335rpx;
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-orient: horizontal;
	-webkit-box-direction: normal;
	-webkit-flex-flow: row;
	        flex-flow: row;
	-webkit-box-pack: center;
	-webkit-justify-content: center;
	        justify-content: center;
	-webkit-box-align: center;
	-webkit-align-items: center;
	        align-items: center;
	color: #828282;
	font-size: 13px;
}
.service-btn-left{
	margin-right: 10rpx;
}
.service-btn-right{
	margin-left: 10rpx;
}
.icon{
	width: 50rpx;
	height: 50rpx;
	margin-right: 30rpx;
}

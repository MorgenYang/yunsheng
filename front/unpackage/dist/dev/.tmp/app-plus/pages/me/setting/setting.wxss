
.setting-body{
	margin-top: 30rpx;
	color: #A8A8A8;
	padding-left: 40rpx;
	padding-right: 40rpx;
	margin-bottom: 100rpx;
	font-size: 16px;
}
.setting-img{
	width: 40rpx;
	height: 40rpx;
}
.setting-line{
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-orient: horizontal;
	-webkit-box-direction: normal;
	-webkit-flex-flow: row;
	        flex-flow: row;
	-webkit-box-align:center;
	-webkit-align-items:center;
	        align-items:center;
	height: 100rpx;
	margin-bottom: 2rpx;
}
.setting-text{
	margin-left: 30rpx;
}
.line{
	background-color: #E4E4E4; 
	height: 2rpx;
	/*解决:ios5不显示*/
	-webkit-transform: scale(0.99);
	        transform: scale(0.99);
	-webkit-transform-origin: 0 0;
	        transform-origin: 0 0;
}
.arrows-right-setting{
	width: 50rpx;
	height: 50rpx;
	position:absolute;
	right:40rpx;
}
/*item的点击样式*/
.setting-click{
	background-color:#F5F5F5;
}
.setting-switch{
	right: 40rpx;
	position:absolute;
	height: 50rpx;
	-webkit-transform:scale(0.7);
	        transform:scale(0.7);
}
.setting-cache{
	right: 50rpx;
	position:absolute;
	/* height: 50upx; */
}

